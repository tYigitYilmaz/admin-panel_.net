 @using AVBS.Entity.Concrete @model AVBS_Menu

@Html.AntiForgeryToken()
@Html.ValidationSummary( true )

<style>
    .form-horizontal .form-group {
        margin-right: 0 !important;
    }
</style>

<div class="row">
    <div class="col-md col-sm-12">
        <div class="form-group">
            <label for="Name">Menü Adı</label>
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="ti-layers"></i>
                </div>
                @Html.TextBoxFor( model => model.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Name", required = "required"} )
            </div>
            <div class="help-block with-errors"></div>
        </div>
    </div>
    
    <div class="col-md col-sm-12">
        <div class="form-group">
            <label for="IncomingTypeId"> Menü Boyut </label>
            <div class="input-group">
                <div class="input-group-addon"><i class="ti-layers-alt"></i></div>
                @Html.DropDownListFor( model => model.MenuSizeId, new SelectList( ViewBag.MenuSizeList, "Id", "Name" ), "", htmlAttributes: new { placeholder = "Menü Boyut", @class = "form -control select2", required = "required" } )
            </div>
            <div class="help-block with-errors"></div>
        </div>
    </div>
    <div class="col-md col-sm-12">
        <div class="form-group">
            <label for="UnitPrice"> Birim Fiyat </label>
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="ti-money"></i>
                </div>
                @Html.TextBoxFor( model => model.SellPrice, htmlAttributes: new { @class = "form-control", @placeholder = "Birim Fiyat Giriniz", required = "required", data_inputmask = "'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '$ ', 'placeholder': '0'" } )
            </div>
            <div class="help-block with-errors"></div>
        </div>
    </div>
</div>
 
<script src="/plugins/bower_components/custom-select/custom-select.min.js"></script>
<script src="/js/validator.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

		$(document).on("submit", "#selectbox_validate", function () {
            if ($("div#maindiv").hasClass("has-error")) {
                $(this).find(".bootstrap-select")
                    .after("<h6 class='has-error' style='color:red;'>please select any value from options.</h6>");
            }

            $("#MenuSizeId").select2();

		});
    });

</script>

@using AVBS.View.Concrete.Table
@section Styles {
    <link href="/plugins/bower_components/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" /> 
    <link href="https://cdn.datatables.net/rowreorder/1.2.3/css/rowReorder.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/custom-table.css" rel="stylesheet" type="text/css" />
}

@{
    var cashbook = ( AVBS_CashBookShowView ) ViewBag.CashBook;
}
 

<!-- Page Content -->
<div class="container-fluid">
    <div class="row bg-title">
        <h4 class="page-title">Kasa - @cashbook.Date.ToString("dd/MM/yyyy")</h4>
    </div>
    @*@{Html.RenderAction( "CashBookWidgets", "Page", new {id=ViewBag.CashBook.Id} );}*@

    <div class="panel panel-default">
        <div class="panel-heading">
            Giderler <small class="text-muted"> Günlük </small>
        </div>
        <div class="panel-wrapper">
            <div class="panel-body">
                
                @{Html.RenderAction( "IndexPartial", "CashBookOutgoing", new { cashbookid = cashbook.Id } );}

            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Gelirler <small class="text-muted"> Günlük </small>
        </div>
        <div class="panel-wrapper">
            <div class="panel-body">
                
                @{Html.RenderAction( "IndexPartial", "CashBookIncoming", new {cashbookid = cashbook.Id} );}

            </div>
        </div>
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            Kasa <small class="text-muted"> Gün Sonu </small>
        </div>
        <div class="panel-wrapper">
            <div class="panel-body">

                <button data-url="/cashbook/AddCashEndPartial/@cashbook.Id/" class="btn btn-primary ajax-modal pull-right"> Kasa Devir Tutarı Düzenle </button>

                <h3 class="text-muted"> Kasa Devir: @cashbook.CashEnd </h3>

            </div>
        </div>
    </div>
     
</div>
<!-- /.container-fluid -->

@section Scripts {

    <script src="/plugins/bower_components/datatables/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/rowreorder/1.2.3/js/dataTables.rowReorder.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>
    <script src="/js/custom-table.js"></script>

}

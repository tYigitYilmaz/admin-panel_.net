<div class="row">
    <div class="col-lg-7 col-sm-12">
        <div id="workTimeChart" style="height: 350px;"></div>
    </div>
    <div class="col-lg-5 col-sm-12">
        <ul class="country-state">
            <li>
                <h2><span class="counter">133</span></h2> <small> Personnels in Locations </small>
                <div class="pull-right">
                    82% <i class="fa fa-level-up text-success"></i>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="background-color: #ff6265 !important; width: 82%; height: 8px;"> <span class="sr-only">82% Complete</span></div>
                </div>
            </li>
            
            <li>
                <hr/>
            </li>
            <li>
                <h2><span class="counter">115</span></h2> <small>Personnels in Work Rooms</small>
                <div class="pull-right">
                    67% <i class="fa fa-level-up text-success"></i>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="background-color: #5d84c2 !important; width: 67%; height: 8px;"> <span class="sr-only">67% Complete</span></div>
                </div>
            </li>
            <li>
                <hr />
            </li>
            <li>
                <h2><span class="counter">18</span></h2> <small>Personnels in Brake Rooms</small>
                <div class="pull-right">
                    13% <i class="fa fa-level-down text-danger"></i>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="background-color: #67b7dc !important; width: 13%; height: 8px;"> <span class="sr-only">13% Complete</span></div>
                </div>
            </li>

            <li>
                <hr />
            </li>
        </ul>
    </div>
</div>

<script src="/plugins/bower_components/amcharts/amcharts.js"></script>
<script src="/plugins/bower_components/amcharts/pie.js"></script>
<script src="/plugins/bower_components/amcharts/themes/light.js"></script>

<script>
    $(document).ready(function () {
        var chart = AmCharts.makeChart("workTimeChart", {
            "type": "pie",
            "theme": "light",
            "dataProvider": [{
                "time": "Total Work Time",
                "value": 4096,
                "color": "#5d84c2"
            }, {
                "time": "Total Brake Time",
                "value": 700,
                "color": "#5bc0de"
            }],
            "hideCredits": true,
            "valueField": "value",
            "titleField": "time",
            "colorField": "color",
            "outlineAlpha": 0.4,
            "depth3D": 15,
            "balloonText": "[[title]]<br><span style='font-size:14px'><b>[[value]]</b> ([[percents]]%)</span>",
            "angle": 30,
            "export": {
                "enabled": false
            }
        });
    });
</script>
@{

    string path = HttpContext.Current.Request.Url.AbsolutePath.ToLower();

    var isDashboard = false;
    var isOfficeOperations = false;
    var isFile = false;
    var isCalendar = false;
    var isClient = false;
    var isPersonnel = false;
    if ( path.Contains( "personnel" ) || path.Contains( "client" ) ) {
        if ( path == "personnel" ) { isPersonnel = true;}
        if ( path == "client" ) { isClient = true;  }
        isOfficeOperations = true;
    } else if ( path.Contains( "file" ) ) {
        isFile = true;
    } else if ( path == "calendar" ) {
        isCalendar = true;
    } else if ( path == "/" ) {
        isDashboard = true;
    }

}

